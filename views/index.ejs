<!-- BLOG POST SECTION -->
<section id="blogs" class="container py-5">
  <div class="row books">
    <h1>Recent Blogs</h1>
    <div class="mt-5">
      <% if (posts.length > 0) { %>
        <% 
          const today = new Date();
          const isNew = function(date) {
            const diffTime = Math.abs(today - new Date(date));
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            return diffDays <= 7;
          };

          const sortedPosts = posts.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
          const latestPosts = sortedPosts.slice(0, 3);
        %>

        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% latestPosts.forEach(function(post) { %>
            <div class="col">
              <div class="card h-100">
                <% if (post.image) { %>
                  <img src="<%= post.image %>" class="card-img-top" alt="Blog Image" style="height: 320px; width: 100%;" >
                <% } %>
                
                <div class="card-body">
                  <h5 class="card-title">
                    <%= post.title %>
                    <% if (isNew(post.createdAt)) { %>
                      <span class="badge bg-success ms-2">New</span>
                    <% } %>
                  </h5>
                  <p class="card-text">
                    <% if (post.content.length > 150) { %>
                      <%= post.content.substring(0, 150) %>...
                    <% } else { %>
                      <%= post.content %>
                    <% } %>
                  </p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-body-secondary">
                      <%= new Date(post.createdAt).toLocaleDateString() %>
                    </small>
                    <a href="/blogs?postId=<%= post.id %>" class="btn btn-sm view-btn3">
                      Read More
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <% if (posts.length > 3) { %>
          <div class="text-center mt-4">
            <a href="/blogs" class="btn view-btn">View All Blogs</a>
          </div>
        <% } %>

      <% } else { %>
        <p>No blogs found.</p>
      <% } %>
    </div>
  </div>
</section>

<!-- END OF BLOG POST SECTION -->

<!-- BOOKS SECTION -->
<section id="books">
  <div class="container books py-5">
    <div class="row books">
      <h1 class="text-center mb-4">Best Selling Books</h1>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% if (books && books.length > 0) { %>
          <% 
            const sortedBooks = books.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
            const latestBooks = sortedBooks.slice(0, 6);
          %>

          <% latestBooks.forEach((bookItem) => { %>
            <div class="col">
              <div class="card h-100">
                <% if (bookItem.coverImage) { %>
                  <img src="<%= bookItem.coverImage %>" class="card-img-top books-img " style="height: 320px; width: 100%;" alt="<%= bookItem.title %>">
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= bookItem.title %></h5>
                  <p class="card-text">
                    <%= bookItem.description.length > 120 ? bookItem.description.substring(0, 120) + "..." : bookItem.description %>
                  </p>
                  <a href="/books?bookId/<%= bookItem.id %>" class="btn btn-sm  mt-2">Read More</a>
                </div>
                <div class="card-footer d-flex justify-content-center align-items-center">
                  <small class="text-muted">
                    <button class="order-copy-btn" onclick="window.location.href='/books/<%= bookItem._id %>';">
                      Order Your Copy - ₦<%= bookItem.price %>
                    </button>
                  </small>
                </div>
              </div>
            </div>
          <% }) %>

          <% if (books.length > 6) { %>
            <div class="mt-4 mx-auto" style="width: fit-content;">
              <a href="/books" class="btn view-btn">View All Books</a>
            </div>
          <% } %>

        <% } else { %>
          <div class="col-12">
            <p class="text-center">No books available</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</section>



